[Unit]
Description=docker-compose network interface
Requires=docker.service
After=docker.service

[Service]
Type=oneshot
User=root
Group=root
RemainAfterExit=yes
WorkingDirectory=/srv/docker
ExecStart=/usr/bin/docker-compose -f /var/lib/docker-compose/docker-compose.yml up -d
ExecStop=/usr/bin/docker-compose -f /var/lib/docker-compose/docker-compose.yml down
TimeoutStartSec=0

[Install]
WantedBy=multi-user.target
